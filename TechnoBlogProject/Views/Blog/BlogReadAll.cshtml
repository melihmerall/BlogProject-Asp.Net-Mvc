@model IEnumerable<Entity.Concrete.Blog>
<!-- News With Sidebar Start -->

<div class="container-fluid">
    <div class="container">
        <div class="row">

            <!-- News Detail Start -->
            <div class="position-relative mb-3">
                @foreach (var value in Model)
                {

                    <div class="bg-white border border-top-0 p-4">
                        <div class="mb-3">
                            <a class="badge badge-primary text-uppercase font-weight-semi-bold p-2 mr-2"
                               href="/Blog/BlogByCategory/@value.CategoryId">@value.Category.CategoryName</a>
                            <a class="text-body">@(((DateTime)value.BlogDate).ToString("yyyy MMMM dd"))</a>
                        </div>
                        <h1 class="mb-3 text-uppercase ">@value.BlogTitle</h1>
                        <div style="font-family: Cambria, Cochin, Georgia, Times, Times New Roman, serif !important; line-height: 32px !important; letter-spacing: -0.003em; font-size: 20px !important; font-style: normal !important; color: rgb(41, 41, 41, 1) !important; ">
                            <p>
                                @Html.Raw(value.BlogContent)
                            </p>


                        </div>

                    </div>
                    <div class="d-flex justify-content-between bg-white border border-top-0 p-4">
                        <div class="d-flex align-items-center">
                            <img class="rounded-circle mr-2" src="@value.Author.AuthorImage" width="25" height="25" alt="">
                            <span>Auhthor By - @value.Author.AuthorName </span>

                           
                        </div>
              
                    </div>
                }
                <!-- News Detail End -->
            </div>



        </div>
        <div style="border-top: 3px #e8eaed solid;"></div>

        <br />

    </div>
</div>

<div class="col-8">
    <div class="d-flex justify-content-between bg-white  border border-bottom-4 p-3 " style="height:310px !important;">
        <div class="section-title d-flex align-items-center">
            <div class="full dis_flex center_text" style="margin-bottom:100px !important;">
                <div class="profile_img">
                    <img width="180" style="float:left; margin-top:120px !important; height:200px !important" class="rounded-circle" src="@ViewBag.authorImage" alt="#" />
                </div>
                <div class="contact_inner" style="margin-left:20% !important; margin-top:140px !important; margin-left:250px !important;">

                    <h3>@ViewBag.authorName</h3>
                    <p>
                        <strong>About: </strong> @ViewBag.authorTitle <br />

                        <strong>Author Mail:</strong> @ViewBag.authorMail
                    </p>

                    <div class="d-flex align-items-center">
                        <a class="nav-link text-red fab fa-twitter" target="_blank" href="@ViewBag.authorTwitter"></a>
                        <a class="nav-link text-red fab fa-instagram" target="_blank" href="@ViewBag.authorInstagram"></a>
                        <a class="nav-link text-bold fab fa-linkedin" target="_blank" href="@ViewBag.authorLinkedin"></a>

                    </div>
                </div>


            </div>
        </div>
    </div>
</div>