@using PagedList;
@using PagedList.Mvc;


@model IEnumerable<Entity.Concrete.Blog>

<div>
   
</div>
<div class="container-fluid">
    <div class="container" style="margin-top:3rem;">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-12">
                        <div class="section-title">
                            <h4 class="m-0 text-uppercase font-weight-bold">Posts</h4>
                            <a id="seeMore" href="/Blog/AllBlogList/" style="margin-left: 40% !important; background-color: #37b69b !important; color: #212529 !important; " class=" badge badge-primary text-uppercase font-weight-semi-bold p-2    ">See More Post</a>

                        </div>
                    </div>
                    @foreach (var value in Model)
                    {
                        if (value.BlogStatus == true)
                        {
                            <div class="col-lg-6">
                                <div class="position-relative mb-3">
                                    <a href="/Blog/BlogDetails/@value.BlogId"> <img class=" img-fluid" src="@value.BlogImage" style="object-fit: cover; width:100% !important; height:auto !important; "></a>

                                    <div class="bg-white border border-top-0 p-3" style="min-height:150px; max-height:auto;">
                                        <div class="mb-2">
                                            <a class="badge badge-primary text-uppercase font-weight-semi-bold p-2 mr-1"
                                               href="/Blog/BlogByCategory/@value.Category.CategoryId">@value.Category.CategoryName</a>
                                            <a class="text-body" href=""><small>@(((DateTime)value.BlogDate).ToString("yyyy MMMM dd"))</small></a>
                                        </div>
                                        <a class="h5 d-block mt-4 text-secondary text-uppercase font-weight-bold" href="/Blog/BlogDetails/@value.BlogId">@value.BlogTitle.</a>
                                       
                                    </div>
                                    <div class="d-flex justify-content-between bg-white border border-top-0 p-4">
                                        <div class="d-flex align-items-center">
                                            <img class="rounded-circle mr-2" src="@value.Author.AuthorImage" width="25" height="25" alt="">
                                            <small>@value.Author.AuthorName - Blog Rating: %@value.BlogRating</small>
                                        </div>
                                        @*<div class="d-flex align-items-center">
                                                <small class="ml-3"><i  class="far fa-eye mr-2"></i></small>
                                                <small class="ml-3"><i class="far fa-comment mr-2"></i>123</small>
                                            </div>*@

                                    </div>

                                </div>

                            </div>
                        }
                    }


                    <div class="col-lg-4">
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                @Html.Action("PopularPost", "Blog")

                <div class="mb-3">
                    <div class="section-title mb-0">
                        <h4 class="m-0 text-uppercase font-weight-bold">Follow Us</h4>
                    </div>
                    <div class="bg-white border border-top-0 p-3">


                        <a href="https://twitter.com/melihmerall" class="d-block w-100 text-white text-decoration-none mb-3" style="background: #52AAF4;">
                            <i class="fab fa-twitter text-center py-4 mr-3" style="width: 65px; background: rgba(0, 0, 0, .2);"></i>
                            <span class="font-weight-medium">Twitter</span>
                        </a>
                        <a href="https://www.linkedin.com/in/melihmerall/" class="d-block w-100 text-white text-decoration-none mb-3" style="background: #0185AE;">
                            <i class="fab fa-linkedin-in text-center py-4 mr-3" style="width: 65px; background: rgba(0, 0, 0, .2);"></i>
                            <span class="font-weight-medium">LinkedIn</span>
                        </a>
                        <a href="https://www.instagram.com/melih.merall" class="d-block w-100 text-white text-decoration-none mb-3" style="background: #C8359D;">
                            <i class="fab fa-instagram text-center py-4 mr-3" style="width: 65px; background: rgba(0, 0, 0, .2);"></i>
                            <span class="font-weight-medium">Instagram</span>
                        </a>

                    </div>
                </div>

