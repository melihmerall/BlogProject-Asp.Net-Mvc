@model  IEnumerable<Entity.Concrete.Comment>
@{
    ViewBag.Title = "GetCommentByBlog";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Comments</h2>
<br />




<!DOCTYPE html>

<html>
<body class="hold-transition sidebar-mini">

    <!-- Site wrapper -->

    <div class="wrapper">

        <section class="content">

            <div class="container-fluid">

                <!-- Timelime example  -->

                <div class="row">

                    <div class="col-md-12">

                        <!-- The time line -->

                        <div class="timeline">
                            @foreach (var value in Model)
                            {


                                <!-- timeline time label -->

                                <div class="time-label">

                                    <span class="bg-gradient-indigo">@(((DateTime)value.CommentDate).ToString("yyyy MMMM dd"))</span>

                                </div>

                                <!-- /.timeline-label -->
                                <!-- timeline item -->

                                <div>

                                    <i class="fas fa-comment bg-yellow"></i>

                                    <div class="timeline-item">


                                        <h3 class="timeline-header"><a href="#">@value.UserName - </a>@value.Mail</h3>

                                        <div class="timeline-body">

                                            @value.CommentText

                                        </div>

                                        <div class="timeline-footer">

                                        </div>

                                    </div>

                                </div>

                                <!-- END timeline item -->
                            }
                        </div>

                    </div>

                    <!-- /.col -->

                </div>

            </div>

            <!-- /.timeline -->

        </section>

        <!-- /.content -->

    </div>

    <!-- ./wrapper -->

</body>

</html>