
@model  IEnumerable<Entity.Concrete.Blog>

@{
    Layout = null;
}
@{ 

    int puan = 1;
}

<div class="mb-3">
    <div class="section-title mb-0">
        <h4 class="m-0 text-uppercase font-weight-bold">Popular Posts</h4>
    </div>
    @foreach (var value in Model)
    {
        puan = value.BlogRating * 10;
        if (puan >= 65 && value.BlogStatus == true)
        {

            <div class="bg-white border border-top-0 p-3">
                <div class="d-flex align-items-center bg-white mb-3" style="height: auto;">
                    <a href="/Blog/BlogDetails/@value.BlogId"><img class="img-fluid " style="width:130px; height:100px;" src="@value.BlogImage" alt=""></a>
                    <div class=" px-2 d-flex flex-column justify-content-center border border-left-0">
                        <div class="mb-0">
                            <a class="badge badge-primary text-uppercase font-weight-semi-bold p-1 mr-2" href="/Blog/BlogByCategory/@value.CategoryId">@value.Category.CategoryName</a>
                            <a style="float:left;" class="text-body" href="/Blog/BlogDetails/@value.BlogId"><small>@(((DateTime)value.BlogDate).ToString("yyyy MMMM dd"))</small></a>
                        </div>
                        <a class="h6 m-0 text-secondary text-uppercase font-weight-bold" href="/Blog/BlogDetails/@value.BlogId">@value.BlogTitle </a>
                    </div>
                </div>

            </div>

        }
    }


</div>