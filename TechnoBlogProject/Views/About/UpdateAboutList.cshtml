
@model IEnumerable<Entity.Concrete.About>


@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>UpdateAbout</h2>



<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <div class="row">

            <div class="col-md-12">

                <div class="card card-primary">

                    <div class="card-header">

                        <h3 class="card-title">About Us Page Edit </h3>

                        <div class="card-tools">

                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                                <i class="fas fa-minus"></i>

                            </button>

                        </div>

                    </div>
                    @using (Html.BeginForm("UpdateAbout", "About", FormMethod.Post))
                    {
                        <div class="card-body">
                            @foreach (var value in Model)
                            {

                                <div class="form-group">

                                    <label for="inputName">Id</label>

                                    <input type="text" id="inputName" name="AboutId" class="form-control" value="@value.AboutId">

                                </div>


                                <div class="form-group">

                                    <label for="inputName">Image 1</label>

                                    <input type="text" id="inputName" name="AboutImage1" class="form-control" value="@value.AboutImage1">

                                </div>

                                <div class="form-group">

                                    <label for="inputName">Image 2</label>

                                    <input type="text" id="inputName" name="AboutImage2" class="form-control" value="@value.AboutImage2">

                                </div>

                                <div class="form-group">

                                    <label for="inputDescription">About 1</label>

                                    <textarea id="inputDescription" class="form-control" name="AboutContent" rows="4">@value.AboutContent</textarea>

                                </div>
                                <div class="form-group">

                                    <label for="inputDescription">About 1</label>

                                    <textarea id="inputDescription" class="form-control" name="AboutContent2" rows="4">@value.AboutContent2</textarea>

                                </div>



                            }
                            <button class="btn btn-success">Update</button>
                        </div>

                        <!-- /.card-body -->
                    }
                </div>

                <!-- /.card -->

            </div>



        </div>



    </section>

</body>

</html>