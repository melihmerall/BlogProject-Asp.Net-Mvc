
@model IEnumerable<Entity.Concrete.Category>


@{
    ViewBag.Title = "AdminCategoryList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>AdminCategoryList</h2>
<br />
<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">



    <!-- Main content -->

    <section class="content">

        <!-- Default box -->

        <div class="card">

            <div class="card-header">

                <h3 class="card-title">Category List</h3>

                <div class="card-tools">

                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">

                        <i class="fas fa-minus"></i>

                    </button>

                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">

                        <i class="fas fa-times"></i>

                    </button>

                </div>

            </div>

            <div class="card-body p-0">

                <table class="table table-striped projects">

                    <thead>

                        <tr>

                            <th style="width: 1%">

                                ID

                            </th>

                            <th style="width: 20%">

                                Category Name

                            </th>

                            <th style="width: 30%">

                                Last Blog

                            </th>

                            <th>

                                Category Rate

                            </th>

                            <th style="width: 8%" class="text-center">

                                Status

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var value in Model)
                        {


                            <tr>

                                <td>@value.CategoryId</td>
                                <th>
                                    @value.CategoryName
                                </th>

                                <td>

                                    <ul class="list-inline">

                                        <li class="list-inline-item">



                                        </li>


                                    </ul>

                                </td>

                                <td class="project_progress">

                                    <div class="progress progress-sm">

                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="57" aria-volumemin="0" aria-volumemax="100" style="width: 57%">

                                        </div>

                                    </div>



                                </td>

                                <td class="project-state">

                                    <span class="badge badge-success">Success</span>

                                </td>

                                <td class="project-actions text-right">

                                    <a class="btn btn-primary btn-sm" href="#">

                                        <i class="fas fa-folder">

                                        </i>

                                        View

                                    </a>

                                    <a class="btn btn-info btn-sm" href="/Category/CategoryEdit/@value.CategoryId">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Edit

                                    </a>

                                    @if (@value.CategoryStatus == true)
                                    {
                                    <td><a href="/Category/StatusChangeToFalse/@value.CategoryId" class="btn btn-danger">Remove</a></td>
                                }
                                else
                                {
                                    <td><a href="/Category/StatusChangeToTrue/@value.CategoryId" class="btn btn-success">Show</a></td>
                                }

                                    

                                </tr>
                            }
                    </tbody>


                </table>
               
            </div>

            <!-- /.card-body -->

        </div>

        <!-- /.card -->

    </section>
    <br />
    <a href="/Category/AddCategory/" class="btn btn-primary">Add New Category</a>
</body>

</html>