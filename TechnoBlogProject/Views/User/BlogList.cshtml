@model  IEnumerable<Entity.Concrete.Blog>

@{
    ViewBag.Title = "BlogList";
    Layout = "~/Views/Shared/AuthorLayout.cshtml";
}
@{
    string color = " ";
}
@{
    string caseName = "";
}


<br />




<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bordered table</h4>
            <p class="card-description">
                Add class <code>.table-bordered</code>
            </p>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th style="width:0%;">
                                ID
                            </th>
                            <th style="width:2%;">
                                Blog List
                            </th>
                            <th style="width:1%;">
                                Blog Rate
                            </th>

                            <th style="width:1%;">
                                Status
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var value in Model)
                        {
                            if (value.BlogRate >= 85)
                            {
                                color = "post-category text-white bg-success mb-3";
                                caseName = "Very Good";
                            }
                            if (value.BlogRate >= 70 && value.BlogRate <= 84)
                            {
                                color = "post-category text-white bg-info mb-3";
                                caseName = "Good";
                            }
                            if (value.BlogRate >= 50 && value.BlogRate <= 69)
                            {
                                color = "post-category text-white bg-warning mb-3";
                                caseName = "Normal";
                            }
                            if (value.BlogRate >= 0 && value.BlogRate <= 49)
                            {
                                color = "post-category text-white bg-danger mb-3";
                                caseName = "Bad";
                            }
                            <tr>
                                <td>
                                    @value.BlogId
                                </td>
                                <td>
                                    @value.BlogTitle
                                </td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" role="progressbar" aria-valuenow="@value.BlogRate" aria-valuemin="0" aria-valuemax="100" style="width: @value.BlogRate%"></div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge @color">@caseName</span>
                                </td>

                                <td style="width:2%;" class="project-actions text-left">

                                    <a class="btn btn-primary btn-sm" target="_blank" href="/Blog/BlogDetails/@value.BlogId">

                                        <i class="fas fa-folder">

                                        </i>

                                        View

                                    </a>

                                    <a class="btn btn-info btn-sm" href="/User/UpdateBlog/@value.BlogId">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Edit

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="#">

                                        <i class="fas fa-trash">

                                        </i>

                                        Remove

                                    </a>

                                </td>

                            </tr>


                        }
                    </tbody>

                </table>

            </div>
            <br />
            <a href="/User/AddNewBlog/" class="btn btn-success">Create New Blog</a>
        </div>
    </div>
</div>


