@using PagedList
@using PagedList.Mvc



@model IEnumerable<Entity.Concrete.Comment>
@{
    ViewBag.Title = "AdminCommentList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>AdminCommentList</h2>


<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">

    <!-- Main content -->

    <section class="content">

        <div class="container-fluid">

            <div class="row">

                <div class="card-body">

                    <!-- Post -->
                    @foreach (var value in Model)
                    {


                        <div class="post">

                            <div class="user-block">

                                <img class="img-circle img-bordered-sm" src="/adminLTE-3.0.4/dist/img/user1-128x128.jpg" alt="user image">

                                <span class="username">

                                    <a href="#">@value.UserName - @value.Blogs.BlogTitle</a>


                                </span>

                                <span class="description">@(((DateTime)value.CommentDate).ToString("yyyy MMMM dd"))</span>
                            </div>
                            <!-- /.user-block -->
                            <p>
                                @value.CommentText
                            </p>
                            <p>
                                <a href="/Comment/StatusChangeToFalse/@value.CommentId" class="link-black text-sm mr-2"><i class="fas fa-door-closed mr-1"></i> Remove Comment</a>

                            </p>
                        </div>
                    }
                </div>

            </div>
        </div>



    </section>

</body>

</html>
<a style="color: #37b69b !important;"></a>
@Html.PagedListPager((IPagedList)Model, pageValue => Url.Action("AdminCommentListTrue", new { pageValue }), PagedListRenderOptions.PageNumbersOnly)